import java.awt.Color;
import java.awt.Dimension;
import java.awt.Font;
import java.awt.Graphics;
import java.awt.Image;
import java.awt.Point;
import java.io.File;
import java.io.IOException;

import javax.imageio.ImageIO;
import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JPanel;


public class SplashWindow extends JFrame{
	JPanel splashPanel;
	
	public SplashWindow(){
		splashPanel = new JPanel();
		splashPanel.setBackground(Color.blue);
		splashPanel.setOpaque(false);
		splashPanel.add(new JLabel("Test This"));
		
		this.setLocationRelativeTo(null);
		
		this.setUndecorated(true);
		this.setSize(new Dimension(1000, 800));
		
		int width = this.getWidth() / 2;
		int height = this.getHeight() / 2;
		
		System.out.println("width: " + width + " " + this.getWidth());
		
		this.setLocation(new Point(this.getLocation().x - width, this.getLocation().y - height));
		
		
		this.setVisible(true);
	}
	
	@Override
	public void paint(Graphics g){
		try {
			Image img = ImageIO.read(new File("C:/Users/nredmond/Documents/Capstone/splashTest.png"));
			g.drawImage(img, 0, 0, null);
			
			g.fillRect(230, 400, 200, 10);
			
			g.setFont(new Font("Arial", Font.BOLD, 10));
			g.drawString("Fetching stuff...", 230, 420);
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
	}
}
