public class MainTest {

	public static void main(String[] args) throws IOException {
		BufferedImage img = ImageIO.read(new File("C:/Users/nredmond/Pictures/textExample.png"));
		ImagePreprocessor proc = new ImagePreprocessor();
		BufferedImage trimmedImg = proc.trimMargins(img);
		
		ImageTestPanel p = new ImageTestPanel();
		p.setTestImage(img);
		
		ImageTestPanel trimmedP = new ImageTestPanel();
		trimmedP.setTestImage(trimmedImg);
		
		JPanel yes = new JPanel();
		yes.setLayout(new BoxLayout(yes, BoxLayout.Y_AXIS));
		
		List<BufferedImage> lines = proc.splitIntoLines(trimmedImg);
		
		for (BufferedImage nextImg : lines){
			ImageTestPanel nextP = new ImageTestPanel();
			nextP.setTestImage(nextImg);
			yes.add(nextP);
		}
		
		JFrame f = new JFrame();
		f.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		f.getContentPane().setLayout(new BoxLayout(f.getContentPane(), BoxLayout.X_AXIS));
		f.getContentPane().add(p);
		f.getContentPane().add(yes);
		f.pack();
		f.setVisible(true);
		
