package app;

public class ComplexNumber {
	private float a, b;
	
	public ComplexNumber(float a, float b){
		this.a = a;
		this.b = b;
	}
	
	public float a(){
		return a;
	}
	
	public float b(){
		return b;
	}
	
	public String toString(){
		String sign = (b < 0.0f) ? " - " : " + ";
		float unsignedB = Math.abs(b);
		
		return (a + sign + unsignedB +"i");
	}
}
